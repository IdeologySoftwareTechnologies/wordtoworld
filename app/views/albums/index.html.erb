<h1>Listing albums</h1>
<br/>

<ul class="albums">
  <% @albums.each do |album| %>
    <li>
        <a href="#">
        <%=link_to image_tag(album.album_cover_url(:thumb).to_s,:class=>"img-responsive img-rounded" ), album %> <br>        
            <b><%= link_to album.title , album %></b>
          <%if admin_signed_in? %>
            <p><%= link_to 'Edit', edit_album_path(album) %> | <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></p>
           <% end %>
        </a>
    </li>
  <% end %>
</ul>

<br>
<%if admin_signed_in? %>
<%= link_to 'New Album', new_album_path %>
<%end%>