<h1>Listing chapters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%=  %></td>
        
        <td><%= link_to chapter.title, chapter %></td>
         <%if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 
<%= link_to 'New Chapter', new_chapter_path if admin_signed_in? %>
